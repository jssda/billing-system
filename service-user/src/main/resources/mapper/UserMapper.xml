<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.team.cuc.billingsystem.mapper.UserMapper">

    <resultMap id="BaseResultMap" type="org.team.cuc.billingsystem.po.userservice.UserPo">
        <id property="id" column="id" jdbcType="INTEGER"/>
        <result property="parentUin" column="parent_uin" jdbcType="INTEGER"/>
        <result property="realName" column="real_name" jdbcType="VARCHAR"/>
        <result property="userName" column="user_name" jdbcType="VARCHAR"/>
        <result property="avatar" column="avatar" jdbcType="VARCHAR"/>
        <result property="email" column="email" jdbcType="VARCHAR"/>
        <result property="type" column="type" jdbcType="CHAR"/>
        <result property="userCode" column="user_code" jdbcType="VARCHAR"/>
        <result property="userId" column="user_id" jdbcType="VARCHAR"/>
        <result property="subType" column="sub_type" jdbcType="VARCHAR"/>
        <result property="company" column="company" jdbcType="VARCHAR"/>
        <result property="admin" column="admin" jdbcType="TINYINT"/>
        <result property="balance" column="balance" jdbcType="DOUBLE"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id
        ,parent_uin,real_name,
        user_name,avatar,email,
        type,user_code,user_id,
        sub_type,company,admin,
        balance,create_time
    </sql>
    <insert id="saveOne" parameterType="UserPo" useGeneratedKeys="true" keyProperty="id">
        insert into t_user(<include refid="Base_Column_List"/>)
        values(null, #{parentUin}, #{realName}, #{userName}, #{avatar}, #{email}, #{type}, #{userCode}, #{userId},
        #{subType}, #{company}, #{admin}, #{balance}, #{createTime})
    </insert>
    <insert id="insertUser" parameterType="UserPo" useGeneratedKeys="true" keyProperty="id">
        insert into t_user(parent_uin, real_name, user_name, avatar, email, `type`, user_code, user_id, sub_type,
                           company,
                           `admin`, balance, create_time)
        VALUES (#{parentUin}, #{realName}, #{userName}, #{avatar}, #{email}, #{type}, #{userCode}, #{userId},
                #{subType}, #{company}, #{admin}, #{balance}, #{createTime})
    </insert>
    <update id="update" parameterType="UserPo">
        update t_user
        <set>
            <if test="parentUin != null">
                parent_uin = #{parentUin},
            </if>
            <if test="realName != null">
                real_name = #{realName},
            </if>
            <if test="userName != null">
                user_name = #{userName},
            </if>
            <if test="avatar != null">
                avatar = #{avatar},
            </if>
            <if test="email != null">
                email = #{email},
            </if>
            <if test="type != null">
                type = #{type},
            </if>
            <if test="userCode != null">
                user_code = #{userCode},
            </if>
            <if test="userId != null">
                user_id = #{userId},
            </if>
            <if test="subType != null">
                sub_type = #{subType},
            </if>
            <if test="company != null">
                company = #{company},
            </if>
            <if test="admin != null">
                admin = #{admin},
            </if>
            <if test="balance != null">
                balance = #{balance},
            </if>
        </set>
        where id = #{id}
    </update>
    <select id="selectAllUsers" resultType="org.team.cuc.billingsystem.po.userservice.UserPo">
        select
        <include refid="Base_Column_List"/>
        from t_user;
    </select>
    <select id="selectUserByUserCode" resultType="org.team.cuc.billingsystem.po.userservice.UserPo"
            parameterType="string">
        select
        <include refid="Base_Column_List"/>
        from t_user
        where user_code = #{userCode}
    </select>
    <select id="selectUserById" resultType="org.team.cuc.billingsystem.po.userservice.UserPo">
        select
        <include refid="Base_Column_List"/>
        from t_user
        where id = #{id}
    </select>

</mapper>
